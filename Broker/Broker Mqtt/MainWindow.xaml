<Window x:Class="Broker_Mqtt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Broker_Mqtt"
        mc:Ignorable="d"
        Title="Broker AWS" Height="450" Width="800">
    <Grid Background="DimGray">
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="100,120,65,120">
                <Button x:Name="btn_startBroker" Width="100" Height="40" Content="Avvia broker" Click="btn_startBroker_ClickAsync" Margin="10" ></Button>
                <Button x:Name="btn_publish" Margin="10" Width="100" Height="40" Content="Publish" RenderTransformOrigin="0.505,-0.3" Click="btn_publish_Click"/>
                <Button x:Name="btn_stop"  Margin="10" Width="100" Height="40" Content="Stop Broker" RenderTransformOrigin="0.505,-0.3" Click="btn_stop_Click"></Button>
            </StackPanel>
            <ListView x:Name="lstv_log" Width="400" Margin="0,90,0,90" Background="Gray" Foreground="White" FontSize="15" >Azioni:</ListView>
        </StackPanel>
    </Grid>
</Window>
